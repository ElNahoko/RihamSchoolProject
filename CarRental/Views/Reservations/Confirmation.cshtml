@model CarRental.Entities.Reservation

<div class="container mt-4">
    <h1>Reservation Confirmed!</h1>
    <p>Thank you for reserving <strong>@Model.Car.Brand @Model.Car.Model</strong>.</p>
    <ul class="list-group">
        <li class="list-group-item"><strong>Reservation ID:</strong> @Model.Id</li>
        <li class="list-group-item"><strong>Car:</strong> @Model.Car.Brand @Model.Car.Model</li>
        <li class="list-group-item"><strong>Start Date:</strong> @Model.StartDate.ToShortDateString()</li>
        <li class="list-group-item"><strong>End Date:</strong> @Model.EndDate.ToShortDateString()</li>
        <li class="list-group-item"><strong>Total Cost:</strong> @Model.TotalCost.ToString("C")</li>
        <li class="list-group-item"><strong>Status:</strong> @Model.Status</li>
    </ul>
    <a asp-controller="Cars" asp-action="Index" class="btn btn-primary mt-3">Back to Cars</a>
</div>
