@model List<CarRental.Models.CarModel>

@if (Model != null && Model.Any())
{
    <div class="container-fluid">
    <h1 class="mt-4">Cars</h1>

    <a asp-action="Create" class="btn btn-success mb-4">
        <i class="fas fa-plus"></i> Create New Car
    </a>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="carsTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Brand</th>
                            <th>Model</th>
                            <th>Year</th>
                            <th>Daily Rate</th>
                            <th>Availability</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ImagePath))
                                        {
                                            <img src="@item.ImagePath" alt="Car Image"
                                                style="width: 100px; height: auto; cursor: pointer;" data-bs-toggle="modal"
                                                data-bs-target="#carImageModal" data-image="@item.ImagePath" />
                                        }
                                    </td>
                                    <td>@item.Brand</td>
                                    <td>@item.Model</td>
                                    <td>@item.Year</td>
                                    <td>@item.DailyRate.ToString("C")</td>
                                    <td>
                                        @if (item.IsAvailable)
                                        {
                                            <span class="badge bg-success">Available</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Not Available</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                                <i class="fas fa-info-circle"></i> Details
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal for Viewing Large Image -->
    <div class="modal fade" id="carImageModal" tabindex="-1" aria-labelledby="carImageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center">
                <img id="modalCarImage" src="" alt="Car Image" class="img-fluid" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
}
else
{
    <div class="alert alert-info">
    No cars available. <a asp-action="Create" class="alert-link">Add a new car</a>
</div>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const modal = document.getElementById('carImageModal');
            const modalImage = document.getElementById('modalCarImage');

            modal.addEventListener('show.bs.modal', (event) => {
                const button = event.relatedTarget;
                const imageUrl = button.getAttribute('data-image');
                modalImage.src = imageUrl;
            });
        });
    </script>
}