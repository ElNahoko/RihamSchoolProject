@model List<CarRental.Models.CarModel>

@if (Model != null && Model.Any())
{
    <div class="container-fluid">
    <h1 class="mt-4">Cars</h1>

    <a asp-action="Create" class="btn btn-success mb-4">
        <i class="fas fa-plus"></i> Create New Car
    </a>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="carsTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Brand</th>
                            <th>Model</th>
                            <th>Year</th>
                            <th>Daily Rate</th>
                            <th>Availability</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Brand</td>
                                    <td>@item.Model</td>
                                    <td>@item.Year</td>
                                    <td>@item.DailyRate</td>
                                    <td>
                                        @if (item.IsAvailable)
                                        {
                                            <span class="badge bg-success">Available</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Not Available</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                                <i class="fas fa-info-circle"></i> Details
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
    No cars available. <a asp-action="Create" class="alert-link">Add a new car</a>
</div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#carsTable').DataTable();
        });
    </script>
}
